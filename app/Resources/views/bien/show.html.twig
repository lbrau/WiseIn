{% extends 'base.html.twig' %}

{% block body %}
    <h1>Bien</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bien.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ bien.libelle }}</td>
            </tr>
            <tr>
                <th>Residence</th>
                <td>{{ bien.residence }}</td>
            </tr>
            <tr>
                <th>Numero</th>
                <td>{{ bien.numero }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ bien.adresse }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{% if bien.enabled %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ bien.photo }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('bien_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('bien_edit', { 'id': bien.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
