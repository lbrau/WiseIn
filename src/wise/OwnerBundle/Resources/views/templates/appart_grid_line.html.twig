<div class="panel panel-info" >
    <div class="panel-heading">{{ appartement.libelle }}</div>
    <div class="panel-body">
        <div class="">
            <div class="col-sm-12 col-md-12">
                <div class="thumbnail">
                    <span class="col-sm-4 col-md-4"><img src="{{ asset('bundles/wiseowner/img/maison_default.jpg') }}" alt="..."></span>
                    <span class="caption col-sm-8 col-md-8">
                        <h3>{{ appartement.residence }}</h3>
                        <table class="table">
                            <tr>
                                <td>Occup√©</td>
                                {% if null == appartement.locataire %}
                                    <td>non</td>
                                {% else %}
                                    <td>Oui</td>
                                {% endif %}
                            </tr>
                            <tr>
                                <td>Locataire</td>
                                {% if null != appartement.locataire %}
                                    <td>appartement.locataire.nom</td>
                                {% else %}
                                    <td>Aucun locataire</td>
                                {% endif %}
                            </tr>
                            <tr>
                                <td>Fin de bail</td>
                                <td>{{ appartement.bail.date | date('r')}}</td>
                            </tr>
                        </table>
                        <p>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>